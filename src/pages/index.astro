---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Your Name - Portfolio">
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">Your Name</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#projects">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section id="home" class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Hi, I'm <span class="text-warning">Your Name</span>
                </h1>
                <p class="lead mb-4">
                Computer Science graduate passionate about creating amazing digital experiences.
                </p>
                <div class="d-flex gap-3">
                    <a href="#projects" class="btn btn-warning btn-lg">View My Work</a>
                    <a href="#contact" class="btn btn-outline-light btn-lg">Get In Touch</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/profile-placeholder.jpg" alt="Your Photo" class="img-fluid rounded-circle shadow-lg" style="max-width: 300px;">
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">About Me</h2>
                <p class="lead">
                I recently graduated with a Bachelor's in Computer Science and I'm excited to dive into web development. 
                I love learning new technologies and creating solutions that make a difference.
                </p>
            </div>
        </div>

        <!-- Skills -->
        <div class="row mt-5">
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-code-slash fs-1 text-primary mb-3"></i>
                        <h5>Programming</h5>
                        <p>Java, Python, JavaScript, C++</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-palette fs-1 text-success mb-3"></i>
                        <h5>Design</h5>
                        <p>UI/UX principles, Responsive design</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-gear fs-1 text-warning mb-3"></i>
                        <h5>Tools</h5>
                        <p>Git, Docker, VS Code, Linux</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section -->
<section id="projects" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">My Projects</h2>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <img src="/project1-placeholder.jpg" class="card-img-top" alt="Project 1">
                    <div class="card-body">
                        <h5 class="card-title">University Management System</h5>
                        <p class="card-text">A Java-based application for managing student records and course enrollments.</p>
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-primary">View Code</a>
                            <a href="#" class="btn btn-outline-primary">Live Demo</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add more project cards -->
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">Let's Connect</h2>
                <p class="lead mb-4">I'm always open to discussing new opportunities and interesting projects.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="mailto:your.email@example.com" class="btn btn-primary">
                        <i class="bi bi-envelope"></i> Email Me
                    </a>
                    <a href="https://linkedin.com/in/yourprofile" class="btn btn-outline-primary">
                        <i class="bi bi-linkedin"></i> LinkedIn
                    </a>
                    <a href="https://github.com/yourusername" class="btn btn-outline-dark">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
</Layout>

<style>
    /* Add Bootstrap Icons */
    @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css");

    /* Smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Custom animations */
    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }
</style>
